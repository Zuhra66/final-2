<%- include("partials/header.ejs") %>
<body>
  <div class="container mt-5">
    <h1>Monster World</h1>
    <%- include('partials/nav') %>
    <h2>Today's Top Monsters</h2>
   
    <div class="row">
      <% pokemons.forEach(pokemon => { %>
        <div class="col-md-4">
          <div class="card comic" 
               onclick='showPokemonModal(<%- JSON.stringify(pokemon) %>)' 
               style="cursor: pointer;">
            <img src="/img/<%= pokemon.imgName %>" class="card-img-top" alt="<%= pokemon.name %>">
            <div class="card-body">
              <h5 class="card-title"><%= pokemon.name %></h5>
              <p>Score: <%= pokemon.score %></p>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  </div>

  <!-- Modal -->
  <div class="modal fade" id="pokemonModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="pokemonModalLabel"></h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <img id="pokemonImage" class="img-fluid mb-3" alt="">
          <p><strong>Description:</strong> <span id="pokemonDescription"></span></p>
          <p><strong>Element:</strong> <span id="pokemonElementId"></span></p>
          <p><strong>Score:</strong> <span id="pokemonScore"></span></p>
        </div>
      </div>
    </div>
  </div>

  <!-- Include Bootstrap and Custom Script -->
  <script src="/js/script.js"></script>
</body>
